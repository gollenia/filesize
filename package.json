{
	"name": "@contexis/filesize",
	"version": "1.0.1",
	"description": "calculate Intl compatible filesize",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"scripts": {
		"build": "tsc",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"lint": "tslint -p tsconfig.json",
		"test": "jest --config jestconfig.json",
		"prepare": "npm run build",
		"prepublishOnly": "npm test && npm run lint",
		"preversion": "npm run lint",
		"version": "npm run format && git add -A src",
		"postversion": "git push && git push --tags"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gollenia/filesize.git"
	},
	"keywords": [
		"filesize",
		"i18n",
		"Intl"
	],
	"author": "Thomas Gollenia",
	"bugs": {
		"url": "https://github.com/gollenia/filesize/issues"
	},
	"homepage": "https://github.com/gollenia/filesize#readme",
	"license": "ISC",
	"devDependencies": {
		"@types/jest": "^29.2.2",
		"jest": "^29.3.1",
		"prettier": "^2.7.1",
		"ts-jest": "^29.0.3",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^4.8.4"
	},
	"files": [
		"lib/**/*"
	]
}